source "https://rubygems.org"

gem 'smart_message'           # An abstraction to protect message content from the backend delivery transport.
gem 'vsm'                     # Async, recursive agent framework for Ruby (Viable System Model): capsules, tools-as-capsules, streaming tool calls, and observability.

gem 'tty-prompt'              # A beautiful and powerful interactive command line prompt.
gem 'tty-box'                 # Draw various frames and boxes in the terminal window.
gem 'tty-screen'              # Terminal screen size detection.
gem 'tty-cursor'              # Terminal cursor positioning, visibility and text manipulation.
gem 'tty-spinner'             # A terminal spinner for tasks that have non-deterministic time frame.

gem 'async'                   # Asynchronous I/O framework for Ruby
gem 'ruby_llm'                # Ruby LLM interface for AI models
gem 'redis'                   # Redis client for pub/sub messaging
gem 'colorize'                # String colorization for terminal output
gem 'minitest'                # Testing framework

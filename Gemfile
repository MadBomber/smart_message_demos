source "https://rubygems.org"

ruby '>= 3.0.0'

# Core messaging and AI framework
gem 'smart_message'             # An abstraction to protect message content from the backend delivery transport.
gem 'vsm'                       # Async, recursive agent framework for Ruby (Viable System Model): capsules, tools-as-capsules, streaming tool calls, and observability.

# TTY gems for terminal UI
gem 'tty-prompt'                # A beautiful and powerful interactive command line prompt.
gem 'tty-box'                   # Draw various frames and boxes in the terminal window.
gem 'tty-screen'                # Terminal screen size detection.
gem 'tty-cursor'                # Terminal cursor positioning, visibility and text manipulation.
gem 'tty-spinner'               # A terminal spinner for tasks that have non-deterministic time frame.

# Core system gems
gem 'async'                     # Asynchronous I/O framework for Ruby
gem 'ruby_llm'                  # Ruby LLM interface for AI models
gem 'redis'                     # Redis client for pub/sub messaging
gem 'colorize'                  # String colorization for terminal output
gem 'awesome_print'             # Pretty print Ruby objects with proper indentation and colors


# Testing dependencies
gem 'minitest'                  # Testing framework
gem 'minitest-reporters'        # Create customizable Minitest output formats
gem 'rake'                      # Rake is a Make-like program implemented in Ruby
gem 'bundler'                   # The best way to manage your application's dependencies



# Additional system gems required by demos
gem 'io-console'                # Console I/O operations
gem 'readline'                  # Readline support for interactive input
gem 'securerandom'              # Secure random number generation
gem 'set'                       # Set collection class
gem 'optparse'                  # Command line option parsing
gem 'fileutils'                 # File system utilities
gem 'json'                      # JSON parsing and generation
gem 'yaml'                      # YAML parsing and generation
gem 'time'                      # Time manipulation utilities
gem 'digest'                    # Cryptographic hash functions
